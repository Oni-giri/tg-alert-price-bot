{
  "name": "telegram-crypto-alert-bot",
  "version": "1.0.0",
  "description": "A TypeScript-based Telegram bot that monitors cryptocurrency prices and sends alerts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "cryptocurrency",
    "alerts",
    "typescript",
    "node.js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "grammy": "^1.21.1",
    "axios": "^1.6.7",
    "better-sqlite3": "^9.4.3",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
